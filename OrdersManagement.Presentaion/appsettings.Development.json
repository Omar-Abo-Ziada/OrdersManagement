{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Server=.;Database=OrderMangmentSystemDb;Trusted_Connection=True;Trust Server Certificate=True;MultipleActiveResultSets=True"
  },
  "JWTSettings": {
    "SecretKey": "YourSuperSecretKeyHere12345678901234567890",
    "ValidAudiences": [
      //angular
      "http://localhost:4200",
      //react
      "http://localhost:3000"
    ],
    "ValidIssuers": [
      //https
      "https://localhost:7129",

      //http
      "http://localhost:5119"

      // iis
      // "http://localhost:10430"

    ],
    "ExpirationInDays": 7
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] | {SourceContext} | {NewLine} {Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  },
  "FluentValidation": {
    "AutoValidate": true
  }
}
